<p id="notice"><%= notice %></p>

<h1>Listing Comments</h1>

    <% @comments.each do |comment| %>
        <h2><%= comment.title %></h2>
        <p><%= comment.content %></p>
        <small>Submited <%= time_ago_in_words(comment.created_at) %>by: <%= comment.author %></small>
    <% end %>

    <br>

<%= link_to 'New Comment', new_comment_path %>
